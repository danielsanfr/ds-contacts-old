                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin">

                    <LinearLayout
                        style="@style/Widget.CardContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Related"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="asjhdkjash asjhdkjash jasjh djashjdh ajsh djhasjhdjaskdhjk ashdhj ashdjkh asjkhdj kashjd hasjh jhdjkasdhjksahjd jasjh djashjdh ajsh djhasjhdjaskdhjk ashdhj ashdjkh asjkhdj kashjd hasjh jhdjkasdhjksahjd" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

