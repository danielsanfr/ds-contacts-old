    <style name="MainThemeBase" parent="ThemeBase.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    <style name="AuxThemeBase" parent="ThemeBase.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    <style name="MainTheme" parent="MainThemeBase" />
    <style name="AuxTheme" parent="AuxThemeBase" />
    <style name="AddContactTheme" parent="AuxTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="ContactInfoTheme" parent="AuxTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="ContactInfoToolbarExpandedTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    <style name="NameEditText" parent="Widget.AppCompat.EditText">
        <item name="android:priority">@android:color/white</item>
        <item name="colorControlNormal">#FCFCFC</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>
    <style name="NameHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="colorControlNormal">#FCFCFC</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>
    <style name="TabLayoutTitleStyle">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
